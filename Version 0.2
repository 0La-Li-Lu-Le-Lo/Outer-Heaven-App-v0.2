<style>
  :root{
    --bg:#0f1115; --panel:#171a21; --panel-2:#1e232d; --text:#e9eef7; --muted:#9aa6b2;
    --hi:#ff5a5f; --med:#ffb020; --lo:#2ecc71; --accent:#08d; --outline:#2a3140;
    --overdue:#ff4d4f; --due-soon:#ffb020; --ok:#2ecc71;
  }
  *{box-sizing:border-box}
  body{
    margin:0; padding:24px; background:var(--bg); color:var(--text);
    font:16px/1.45 system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, "Helvetica Neue", Arial, "Noto Sans", "Apple Color Emoji","Segoe UI Emoji";
    min-height:100vh;
    /* Watermark (optional: place outer-heaven-logo.png in same repo root) */
    background-image: url('outer-heaven-logo.png');
    background-repeat:no-repeat; background-position:center center;
    background-attachment: fixed;
    background-size: 480px auto; opacity:1;
  }
  .scrim{ /* subtle dark overlay so text stays readable over watermark */
    position: fixed; inset:0; pointer-events:none; background: radial-gradient(ellipse at center, rgba(15,17,21,0) 30%, rgba(15,17,21,0.55) 100%);
  }
  .app{
    max-width:880px; margin:0 auto; position:relative; z-index:1;
  }
  header{
    display:flex; align-items:center; justify-content:space-between; gap:12px; margin-bottom:18px;
  }
  .brand{
    display:flex; align-items:center; gap:12px;
  }
  .brand .logo{
    width:40px; height:40px; border-radius:10px; background:var(--panel-2);
    background-image: url('outer-heaven-logo.png'); background-size:cover; background-position:center;
    border:1px solid var(--outline);
  }
  h1{margin:0; font-size:20px; letter-spacing:.4px}
  .panel{
    background:linear-gradient(180deg, var(--panel), var(--panel-2));
    border:1px solid var(--outline);
    border-radius:16px; padding:16px; box-shadow:0 10px 30px rgba(0,0,0,.35);
    backdrop-filter: blur(2px);
  }
  .inputs{
    display:grid; grid-template-columns: 1fr 130px 150px 120px auto; gap:10px;
  }
  input[type="text"], input[type="date"], input[type="time"], select{
    width:100%; padding:10px 12px; border-radius:10px; border:1px solid var(--outline);
    background:#11151b; color:var(--text); outline:none;
  }
  button{
    padding:10px 14px; border:none; border-radius:10px; cursor:pointer; font-weight:600;
    background:var(--accent); color:white; transition:transform .05s ease, opacity .15s ease;
  }
  button:active{ transform: translateY(1px); }
  .toolbar{
    display:flex; flex-wrap:wrap; gap:8px; margin-top:12px;
  }
  .toolbar button.alt{
    background:#222935; color:var(--text); border:1px solid var(--outline);
  }
  .toolbar .chip{ padding:8px 10px; font-size:13px }
  .list{ margin-top:16px; display:flex; flex-direction:column; gap:10px; }
  .card{
    display:grid; grid-template-columns: 1fr auto; gap:12px; align-items:center;
    background: #141922; border:1px solid var(--outline); border-radius:14px; padding:12px 14px;
  }
  .meta{
    display:flex; align-items:center; gap:10px; flex-wrap:wrap;
    font-size:13px; color:var(--muted);
  }
  .title{ font-size:16px; font-weight:600; color:var(--text) }
  .right{ display:flex; align-items:center; gap:8px; }
  .pill{
    font-size:12px; padding:5px 8px; border-radius:999px; border:1px solid var(--outline); background:#10151d;
  }
  .priority{ font-weight:700; letter-spacing:.2px }
  .p-high{ color:var(--hi) }
  .p-medium{ color:var(--med) }
  .p-low{ color:var(--lo) }
  .status.overdue{ color:#fff; background:rgba(255,77,79,.18); border-color:rgba(255,77,79,.35) }
  .status.duesoon{ color:#fff; background:rgba(255,176,32,.18); border-color:rgba(255,176,32,.35) }
  .status.ok{ color:#cde9d7; background:rgba(46,204,113,.12); border-color:rgba(46,204,113,.28) }

  .actions button{ background:#222935; color:#dbe7ff; border:1px solid var(--outline) }
  .actions button.delete{ background:#2a1c1e; color:#ffd7db; border-color:#52363a }
  .actions button.save{ background:#17331f; color:#d8ffe6; border-color:#295f3a }
  .actions button.cancel{ background:#2a2a2a; color:#eee; border-color:#444 }

  /* Edit row */
  .edit-row{ display:grid; grid-template-columns: 1fr 120px 140px 110px auto; gap:8px; align-items:center }
  .edit-row input, .edit-row select{ background:#0f141b }

  @media (max-width:720px){
    .inputs{ grid-template-columns: 1fr 120px 1fr 1fr auto; }
    .edit-row{ grid-template-columns: 1fr 120px 1fr 1fr auto; }
  }
  @media (max-width:540px){
    .inputs{ grid-template-columns: 1fr 1fr; }
    .inputs .full{ grid-column: 1/-1; }
    .edit-row{ grid-template-columns: 1fr 1fr; }
  }
</style>
</head>
